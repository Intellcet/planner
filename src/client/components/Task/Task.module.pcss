* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    outline: none;
    text-decoration: none;
}

.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    padding: 15px;

    width: 1150px;
    height: 150px;

    background: #D9D9D9;
}

.heading {
    display: flex;
    justify-content: space-between;
}

.title {
    font-size: 32px;
    line-height: 38px;
}

.description {

    font-size: 20px;
    line-height: 24px;
}