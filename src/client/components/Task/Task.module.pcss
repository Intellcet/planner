.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 17px 13px 22px 14px;
    width: 1150px;
    height: 150px;
    background: #D9D9D9;
}

.heading {
    display: flex;
    justify-content: space-between;
}

.title {
    font-size: 32px;
    line-height: 38px;
}

.description {
    font-size: 20px;
    line-height: 24px;
}

.date {
    font-size: 20px;
    line-height: 24px;
}

.task-number {
    font-size: 16px;
    line-height: 19px;
}